*
	font-family 'PT Sans', Arial, sans-serif

body
	background #f2f2f2

a
	color #000
	transition all .2s ease

	&:hover
		color $blue

	&:active
		color rgba(0, 0, 0, .3)

.wrapper
	margin 0 auto
	width 1200px
	overflow hidden
	text-align center
	background-color #fff
	box-shadow 0 5px 15px rgba(0, 0, 0, .2)

	@media (max-width: $desktop-bp)
		width 100%
		box-shadow none

.sedona
	margin-bottom 35px

	@media (max-width: $mobile-bp)
		padding 0 25px
