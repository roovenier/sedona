.advantage-block
	display flex
	height 256px

	@media (max-width: $mobile-bp)
		flex-direction column
		height auto

	&--2
		flex-direction row-reverse

		@media (max-width: $mobile-bp)
			flex-direction column

	&--3
		background-color #eee

	&__item
		display flex
		flex 1
		flex-direction column
		align-items center
		justify-content center

		&:last-child
			border 0

		@media (max-width: $mobile-bp)
			margin 30px 20px 0
			padding-bottom 30px
			border-bottom 1px solid #d6d6d6

	&__info
		display flex
		flex 1
		flex-direction column
		justify-content center
		background-color $blue

		@media (max-width: $mobile-bp)
			padding 40px 0

	&__image
		flex 2
		width 100%
		height 256px
		background-position 100% 0

		@media (max-width: $mobile-bp)
			background-position 50% 0
			background-size cover

		&--1
			background-image: url(/images/advantage_1@2x.jpg)

			@media (max-width: $tablet-bp)
				background-image: url(/images/advantage_1.jpg)

		&--2
			background-image: url(/images/advantage_2@2x.jpg)

			@media (max-width: $tablet-bp)
				background-image: url(/images/advantage_2.jpg)

	&__title
		margin-bottom 12px

		@media (max-width: $mobile-bp)
			white-space normal

	&__order
		margin-bottom 25px

	&__text
		margin 0 10px

		@media (max-width: $tablet-bp)
			margin 0 40px
