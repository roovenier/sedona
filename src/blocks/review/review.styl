.review
	margin 100px auto 0
	width 960px

	@media (max-width: $desktop-bp)
		margin-top 70px
		width 648px

	@media (max-width: $tablet-bp)
		margin-top 0
		width 280px

	&__title
		margin-bottom 26px
		font-size 30px

		@media (max-width: $tablet-bp)
			font-size 18px

	&__text

		@media (max-width: $tablet-bp)
			padding-bottom 20px
			border-bottom 1px solid #e5e5e5

	&__starting
		margin-top 65px
		margin-bottom 70px
		display flex

		@media (max-width: $tablet-bp)
			margin-top 22px
			margin-bottom 22px
			flex-direction column

	&__block
		margin-bottom 30px

		&--places
			margin-bottom 70px

			@media (max-width: $desktop-bp)
				margin-bottom 40px

			@media (max-width: $tablet-bp)
				margin-bottom 25px
				border-bottom 1px solid #e5e5e5

		&--contacts

			@media (max-width: $tablet-bp)
				margin-bottom 26px
				padding-bottom 26px
				border-bottom 1px solid #e5e5e5

		&--textarea
			margin-bottom 58px

			@media (max-width: $tablet-bp)
				margin-bottom 50px

	&__impression
		flex 1
		border-right 1px solid #dbdbdb

		@media (max-width: $tablet-bp)
			margin-top 20px
			order 1
			border-right 0
			border-bottom 1px solid #e5e5e5

	&__represent
		flex 1

	&__section
		position relative
		margin 0 0 45px
		font-size 21px
		font-weight 600
		text-transform uppercase
		white-space pre

		@media (max-width: $desktop-bp)
			margin-bottom 30px

		@media (max-width: $tablet-bp)
			margin-bottom 22px
			font-size 18px

		&--desktop

			@media (max-width: $desktop-bp)
				display none

			@media (max-width: $tablet-bp)
				display block

		&--tablet
			display none

			@media (max-width: $desktop-bp)
				display block

			@media (max-width: $tablet-bp)
				display none

		&--full

			&:before,
			&:after
				content ""
				position absolute
				top 50%
				margin-top -2px
				width 280px
				height 1px
				background-color #dbdbdb

			@media (max-width: $desktop-bp)

				&:before,
				&:after
					width 125px

			@media (max-width: $tablet-bp)
				&:before,
				&:after
					display none

			&:before
				left 0

			&:after
				right 0

	&__point
		margin-bottom 22px
		height 56px
		text-align left

		&--contacts

			@media (max-width: $desktop-bp)
				margin-bottom 30px
				display flex
				flex-direction column
				height auto

			@media (max-width: $tablet-bp)
				margin-bottom 0

	&__radio

		&:not(checked)
			position absolute
			opacity 0

			& + label
				position relative
				padding 0 0 0 75px
				display inline-block
				height 56px
				line-height 56px
				font-size 18px
				font-weight 600
				cursor pointer

				&:before
					content ""
					position absolute
					top 0
					left 0
					width 56px
					height 56px
					border-radius 50%
					background-color #f2f2f2

				&:after
					content ""
					position absolute
					top 17px
					left 17px
					width 22px
					height 22px
					border-radius 50%
					background-color #333
					opacity 0
					transition all .2s

		&:checked

			& + label

				&:after
					content ""
					opacity 1

	&__person
		display flex
		flex-direction column
		align-items flex-end

		@media (max-width: $tablet-bp)
			border-bottom 1px solid #e5e5e5

	&__input
		margin-left 20px
		padding 0 22px
		height 56px
		font-size 18px
		font-weight 600
		background-color #f2f2f2
		border 0
		outline 0

		@media (max-width: $desktop-bp)
			width 150px

		&--tel,
		&--email

			@media (max-width: $desktop-bp)
				margin-left 0
				width 100%

	&__contacts
		display flex
		justify-content space-between

		@media (max-width: $desktop-bp)
			flex-direction column

	&__icon
		display flex
		justify-content center
		align-items center
		flex 56px 0 0
		width 56px
		height 56px
		background-color #e6e6e6

	&__box
		position relative
		display inline-flex
		vertical-align middle

		&--tel

			@media (max-width: $tablet-bp)
				margin-bottom 48px

	&__error
		position absolute
		top -27px
		left 40px
		margin 0
		display none
		font-size 14px
		color #ff5c5c

		@media (max-width: $desktop-bp)
			left auto
			right 0

		@media (max-width: $tablet-bp)
			top auto
			left 22px
			bottom -27px

	&__tel
		display block
		@extend $tel

	&__mail
		display block
		@extend $mail

	&__places
		display flex
		justify-content space-between

		@media (max-width: $desktop-bp)
			margin 0 auto
			flex-wrap wrap
			width 520px

		@media (max-width: $tablet-bp)
			width 100%
			flex-direction column

	&__place
		height 56px

		@media (max-width: $desktop-bp)
			margin 0 25px 30px
			flex 1
			align-items flex-start
			text-align left

		@media (max-width: $tablet-bp)
			margin 0 0 24px

	&__checkbox

		&:not(checked)
			position absolute
			opacity 0

			& + label
				position relative
				padding 0 0 0 80px
				display inline-block
				height 56px
				line-height 56px
				font-size 18px
				font-weight 600
				cursor pointer

				&:before
					content ""
					position absolute
					top 0
					left 0
					width 56px
					height 56px
					border-radius 6px
					background-color #f2f2f2

				&:after
					content ""
					position absolute
					top 20px
					left 17px
					opacity 0
					transition all .2s
					@extend $tick

		&:checked

			& + label

				&:after
					content ""
					opacity 1

	&__textarea
		padding 20px
		display block
		width 100%
		height 160px
		box-sizing border-box
		resize none
		font-size 18px
		font-weight 600
		background-color #f2f2f2
		border 0
		outline 0

		@media (max-width: $desktop-bp)
			margin-top 60px

		@media (max-width: $tablet-bp)
			margin-top 0

	&__footer
		margin-bottom 70px
		display flex
		justify-content space-between
		align-items center

	&__label

		@media (max-width: $desktop-bp)
			margin-left 22px
			margin-bottom 8px

	&__remark

		@media (max-width: $tablet-bp)
			display none
