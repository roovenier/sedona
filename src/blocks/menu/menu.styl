.menu
	margin 0
	padding 0
	display flex
	align-items flex-start
	list-style none

	@media (max-width: $mobile-bp)
		flex-direction column
		align-items center

	&__item
		margin-top 18px
		flex 1

		&:last-child

			& .menu__link
				margin-bottom 0
				border-bottom 0

				@media (max-width: $mobile-bp)
					box-shadow inset 0 -10px 10px -10px rgba(0, 0, 0, 0.5)

				&:after
					display none

		@media (max-width: $mobile-bp)
			margin 0
			width 100%
			display none

		&--logo
			position relative
			z-index 1
			margin-top 0
			display flex
			justify-content center

			& .menu__link
				padding 0
				background-color transparent
				border 0

				@media (max-width: $mobile-bp)
					display flex
					justify-content center

				&:after
					display none

			@media (max-width: $mobile-bp)
				order 1

	&__logo
		display block

		&--desktop
			@extend $logo

			@media (max-width: $tablet-bp)
				display none

		&--tablet
			@extend $logo--tablet
			display none

			@media (max-width: $tablet-bp)
				display block

	&__link
		font-size 14px
		font-weight 600
		color #000
		text-transform uppercase
		text-decoration none

		@media (max-width: $mobile-bp)
			position relative
			margin-bottom 1px
			padding 17px 0 14px
			display block
			font-size 18px
			color #fff
			background-color $blue
			border-bottom 1px solid #678fa8

			&:hover
				color #fff
				background-color $blue-darker

			&:active
				color rgba(255, 255, 255, .3)
				background-color $blue-dark

			&:after
				content ""
				position absolute
				bottom -2px
				left 0
				width 100%
				height 1px
				background-color #9ac2db

		&--active
			color #766357

			&:hover
				color #604e43

			&:active
				color #766357
				opacity .3

	&__close
		position absolute
		top 0
		right 0
		justify-content center
		align-items center
		width 62px
		height 55px
		display none

		@media (max-width: $mobile-bp)
			display flex

		&-icon
			display block
			@extend $close

	&__bars
		position absolute
		z-index 123
		top 17px
		right 20px
		display none
		@extend $bars

		@media (max-width: $mobile-bp)
			display block
